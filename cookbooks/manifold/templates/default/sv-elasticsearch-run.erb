#!/bin/sh

cd <%= @options[:elasticsearch_data_dir] %>/
export JAVA_HOME=/opt/manifold/embedded/jre/
exec 2>&1

exec chpst -P \
-U <%= @options[:elasticsearch_user] %> -u <%= @options[:elasticsearch_user] %> \
/opt/manifold/embedded/elasticsearch/bin/elasticsearch -Epath.conf=<%= @options[:elasticsearch_dir] %>