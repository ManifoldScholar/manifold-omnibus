#!/bin/sh

cd <%= @options[:elasticsearch_data_dir] %>/
export ES_JAVA_HOME=/opt/manifold/embedded/open-jre
export ES_PATH_CONF=<%= @options[:elasticsearch_dir] %>
exec 2>&1

exec chpst -P \
-U <%= @options[:elasticsearch_user] %> -u <%= @options[:elasticsearch_user] %> /opt/manifold/embedded/elasticsearch/bin/elasticsearch